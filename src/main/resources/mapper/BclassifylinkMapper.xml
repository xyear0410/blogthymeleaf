<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tgxyear.mapper.BclassifylinkMapper">
    <select id="getblogclassifyid" resultType="com.tgxyear.pojo.Classify">
        SELECT classifyname FROM b_clink,classify
WHERE b_clink.classifyid =classify.id
AND bid =#{bid}
    </select>
</mapper>